<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.storemanagement.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.storemanagement.ui.getOrder.GetOrderFragment"
        android:label="订单列表"
        tools:layout="@layout/fragment_get_order" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.storemanagement.ui.checkStore.CheckStoreFragment"
        android:label="@string/title_check_ware"
        tools:layout="@layout/fragment_check_store" />

    <fragment
        android:id="@+id/navigation_other"
        android:name="com.example.storemanagement.ui.other.OtherFragment"
        android:label="@string/title_other"
        tools:layout="@layout/fragment_other" />

</navigation>